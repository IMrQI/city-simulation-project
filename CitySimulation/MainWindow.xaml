<Window x:Class="CitySimulation.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:emergency="clr-namespace:CitySimulation.Views.EmergencyService"
        xmlns:foreign="clr-namespace:CitySimulation.Views.ForeignRelations"
        xmlns:extraction="clr-namespace:CitySimulation.Views.ResourceExtraction_17"
        xmlns:production="clr-namespace:CitySimulation.Views.Production_18"
        Title="City Simulation Project" Height="800" Width="1200">

    <Grid>
        <TabControl>
            <!-- Существующие вкладки -->
            <TabItem Header="МЧС (8)">
                <emergency:EmergencyServiceView/>
            </TabItem>

            <TabItem Header="Внешние связи (25)">
                <foreign:ForeignRelationsView/>
            </TabItem>

            <!-- Новые вкладки для вариантов 17 и 18 -->
            <TabItem Header="Добыча ресурсов (17)">
                <extraction:ResourceExtractionView/>
            </TabItem>

            <TabItem Header="Производственные цеха (18)">
                <production:ProductionView/>
            </TabItem>
        </TabControl>
    </Grid>
</Window>